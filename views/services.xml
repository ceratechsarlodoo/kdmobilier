                            <div class="row">
                              <div class="col-md-4">
                                <div class="pbminfotech-ele-fid-style-3">
                                  <div class="pbmit-fld-contents">
                                    <div
                                      class="pbmit-circle-outer"
                                      data-digit="87"
                                      data-fill="#bb9a65"
                                      data-thickness="1.5"
                                      data-size="153"
                                    >
                                      <div class="pbmit-circle">
                                        <div class="pbmit-fid-inner">
