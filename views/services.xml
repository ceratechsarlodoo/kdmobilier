<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Page Services -->
        <record id="theme_kdmobilier.services_main" model="website.page">
            <field name="name">Nos Services</field>
            <field name="type">qweb</field>
            <field name="url">/services</field>
            <field name="website_published">True</field>
            <field name="key">theme_kdmobilier.services_main</field>
            <field name="arch" type="xml">
                <t t-name="theme_kdmobilier.services_main">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure oe_empty"></div>
                        <!-- Title Bar -->
                        <div class="pbmit-title-bar-wrapper parallax">
                            <div class="o_we_bg_filter bg-black-50"></div>
                            <div class="container">
                                <div class="pbmit-title-bar-content">
                                    <div class="pbmit-title-bar-content-inner">
                                        <div class="pbmit-tbar">
                                            <div class="pbmit-tbar-inner container">
                                                <h1 class="pbmit-tbar-title">Nos Services</h1>
                                            </div>
                                        </div>
                                        <div class="pbmit-breadcrumb">
                                            <div class="pbmit-breadcrumb-inner">
                                                <span>
                                                    <a href="/" class="home">
                                                        <span>KD Mobilier</span>
                                                    </a>
                                                </span>
                                                <span class="sep">
                                                    <i class="pbmit-base-icon-angle-right"></i>
                                                </span>
                                                <span>
                                                    <span class="post-root post post-post current-item">Services</span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="page-content">
                            <!-- Services Grid -->
                            <section class="section-md">
                                <div class="container">
                                    <div class="row pbmit-element-posts-wrapper">
                                        <!-- Conseil en Décoration -->
                                        <article class="pbmit-ele-blog pbmit-blog-style-1 col-md-4">
                                            <div class="post-item">
                                                <div class="pbminfotech-box-content">
                                                    <div class="pbmit-featured-container">
                                                        <div class="pbmit-featured-img-wrapper">
                                                            <div class="pbmit-featured-wrapper">
                                                                <img src="/theme_kdmobilier/static/src/images/service/conseil-decoration.jpg" class="img-fluid" alt="Conseil en Décoration"/>
                                                            </div>
                                                        </div>
                                                        <a class="pbmit-link" href="/services/conseil-decoration"></a>
                                                        <a class="pbmit-blog-btn" href="/services/conseil-decoration">
                                                            <span class="pbmit-button-icon">
                                                                <i class="pbmit-base-icon-pbmit-up-arrow"></i>
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="pbmit-content-wrapper">
                                                        <h3 class="pbmit-post-title">
                                                            <a href="/services/conseil-decoration">Conseil en Décoration</a>
                                                        </h3>
                                                        <div class="pbminfotech-box-desc">
                                                            Des conseils personnalisés pour créer l'intérieur de vos rêves.
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>

                                        <!-- Design et Architecture d'intérieur -->
                                        <article class="pbmit-ele-blog pbmit-blog-style-1 col-md-4">
                                            <div class="post-item">
                                                <div class="pbminfotech-box-content">
                                                    <div class="pbmit-featured-container">
                                                        <div class="pbmit-featured-img-wrapper">
                                                            <div class="pbmit-featured-wrapper">
                                                                <img src="theme_kdmobilier/static/src/images/service/design-planning.jpg" class="img-fluid" alt="Design et Architecture d'intérieur"/>
                                                            </div>
                                                        </div>
                                                        <a class="pbmit-link" href="/services/design-architecture"></a>
                                                        <a class="pbmit-blog-btn" href="/services/design-architecture">
                                                            <span class="pbmit-button-icon">
                                                                <i class="pbmit-base-icon-pbmit-up-arrow"></i>
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="pbmit-content-wrapper">
                                                        <h3 class="pbmit-post-title">
                                                            <a href="/services/design-architecture">Design et Architecture d'intérieur</a>
                                                        </h3>
                                                        <div class="pbminfotech-box-desc">
                                                            Transformez votre espace avec notre expertise en design et architecture d'intérieur.
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>

                                        <!-- Entretien de Canapé -->
                                        <article class="pbmit-ele-blog pbmit-blog-style-1 col-md-4">
                                            <div class="post-item">
                                                <div class="pbminfotech-box-content">
                                                    <div class="pbmit-featured-container">
                                                        <div class="pbmit-featured-img-wrapper">
                                                            <div class="pbmit-featured-wrapper">
                                                                <img src="/theme_kdmobilier/static/src/images/service/entretien-canape.jpg" class="img-fluid" alt="Entretien de Canapé"/>
                                                            </div>
                                                        </div>
                                                        <a class="pbmit-link" href="/services/entretien-canape"></a>
                                                        <a class="pbmit-blog-btn" href="/services/entretien-canape">
                                                            <span class="pbmit-button-icon">
                                                                <i class="pbmit-base-icon-pbmit-up-arrow"></i>
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div class="pbmit-content-wrapper">
                                                        <h3 class="pbmit-post-title">
                                                            <a href="/services/entretien-canape">Entretien de Canapé</a>
                                                        </h3>
                                                        <div class="pbminfotech-box-desc">
                                                            Service professionnel d'entretien pour vos canapés en cuir.
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>


                                    </div>
                                </div>
                            </section>
                        </div>
                        <div id="wrap" class="oe_structure oe_empty"></div>
                    </t>
                </t>
            </field>
        </record>
    </data>

</odoo>